<body style="background-image: url(<%= asset_path "img01.jpg"%>); background-size:cover;">
  <div class="login">
  <h2 style="color: #FFF; text-align: center;">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="field">
        <%= f.label :email, {for: "email"} %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password, {for: "password"} %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-success btn-block btn-large' %>
      </div>
    </div>
  <% end %>

  <div style="text-align: center;">
    <%= render "devise/shared/links" %>
  </div>
</body>
