<body style="background-color: #F7F8E0;">
  <h2 style="text-align: center;">Sign up</h2>
  <div class="login">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <div class="field">
          <%= f.label :email, {for: "email"} %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control'  %>
        </div>

        <div class="field">
          <%= f.label :password, {for: "password"}  %>
          <% if @validatable %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, {for: "password_confirmation"} %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :family_name, {for: "family_name"} %><br />
          <%= f.text_field :family_name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :first_name, {for: "first_name"} %><br />
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :prefecture, {for: "prefecture"} %><br />
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {}, {class: 'form-control', id: 'user_prefecture'} %>
        </div>

        <div class="field">
          <%= f.label :city, {for: "city"} %><br />
          <div class="controls"><%= render partial: 'shared/form_cities', locals: {prefecture_id: City.first.prefecture_id} %></div>
        </div>

        <div class="field">
          <%= f.label :avatar %><br />
          <%= f.file_field :avatar %><br />
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-success btn-block btn-large' %>
        </div>
      <% end %>
    </div>
    <div style="text-align: center;">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>
